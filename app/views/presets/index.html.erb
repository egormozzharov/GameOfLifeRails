<h3 style="text-align: center"><%= t('my_presets') %></h3>


<%= link_to t('new_preset'), new_preset_path, :class => 'link' %>
<%= link_to t('start_with_empty_field'), game_index_path, :class => 'link' %>
<%= link_to t('watch_users_presets'), all_presets_path, :class => 'link' %>



<div class="row" style="border-bottom: 3px solid #c0c0c0">

  <div class="col-lg-1 col-md-1 col-sm-2 col-xs-3">
    <b><%= t('name') %></b>
  </div>
  <div class="col-lg-2 col-md-2 col-sm-2 hidden-xs">
    <b><%= t('desc') %></b>
  </div>

</div>

<% @my_presets.each do |u| %>

    <div class="row" style="border-bottom: 1px dotted #c0c0c0">

      <div class="col-lg-1 col-md-1 col-sm-2 col-xs-4">
        <%= u.name %>
      </div>
      <div class="col-lg-2 col-md-2 col-sm-2 hidden-xs">
        <%= u.desc %>
      </div>

      <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
        <%= link_to t('start_with_this_preset'), game_start_path(u), method: :get %>
      </div>
      <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
        <%= link_to t('destroy'), u, method: :delete, data: {confirm: t('sure')} %>
      </div>

    </div>
<% end %>

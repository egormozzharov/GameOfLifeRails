<div class="row">
<div class="col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4 col-sm-6 col-xs-12">
  <div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title"><strong><%= t('add_email') %></strong></h3></div>
    <div class="panel-body">
    <%= form_for(@user, :as => 'user', :url => users_save_email_path, :html => {role: 'form'}, :method => :post) do |f| %>
        <% if @show_errors && @user.errors.any? %>
            <div id="error_explanation">
              <% @user.errors.full_messages.each do |msg| %>
                  <%= msg %>
                  <br>
              <% end %>
            </div>
        <% end %>
        <div class="form-group">
          <%= f.label :email %>
            <%= f.text_field :email, :autofocus => true, :value => '', class: 'form-control', placeholder: 'Example: email@me.com' %>
            <p class="help-block">Please confirm your email address. No spam.</p>
        </div>
        <div class="actions">
          <%= f.submit 'Continue', :class => 'btn btn-sm btn-default' %>
        </div>
    <% end %>
  </div>
  </div>
</div>
</div>



<%= link_to t('to_my_confs'), confs_path, :class => 'link' %>

<div class="col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4 col-sm-4 col-xs-12">
  <div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title"><strong><%= t('new_config') %></strong></h3></div>
    <div class="panel-body theme-form">
      <%= form_for @new_config do |f| %>
          <div class="form-group error">
            <%= flash[:alert] %>
          </div>



          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: "Name" %>
          </div>

          <div class="form-group">
            <%= f.label :desc %>
            <%= f.text_area :desc, :autofocus => true, class: 'form-control', placeholder: "Description" %>
          </div>

          <p><%= t('die_condition') %></p>

          <% 9.times do |i| %>
              <%= label_tag i %>
              <%= check_box_tag "die_#{i}" %>
          <% end %>


          <p><%= t('alive_condition') %></p>

          <% 9.times do |i| %>
              <%= label_tag i %>
              <%= check_box_tag "alive_#{i}" %>
          <% end %>


          <div><%= f.submit t('create'), class: "btn btn-sm btn-default" %></div>
      <% end %>
    </div>
  </div>
</div>